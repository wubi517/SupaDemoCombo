<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/background1"
    tools:context=".activity.VodInFoActivity">
    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/back_button_bg"
            android:layout_marginBottom="70sp"
            android:layout_marginTop="70sp"
            android:id="@+id/ly_back"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="25dp"
            android:paddingLeft="30sp"
            android:paddingEnd="25dp"
            android:paddingStart="20sp"
            android:orientation="vertical"
            android:layout_width="0sp"
            android:layout_weight="0.6"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="invisible"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@color/trans_parent"
                android:paddingTop="200dp"
                android:paddingBottom="150sp"
                android:id="@+id/btn_back"
                android:src="@drawable/backbg"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="30sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RECORDINGS"
                        android:textColor="@color/welcome_color"
                        android:textSize="30sp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INFORMATION ABOUT THE MOVIE"
                        android:textColor="@color/welcome_color"
                        android:textSize="25dp" />
                </LinearLayout>

                <TextView
                    android:layout_marginRight="50sp"
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="19:30"
                    android:textColor="@color/welcome_color"
                    android:textSize="30sp" />
            </RelativeLayout>
            <LinearLayout
                android:padding="25sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="6"
                android:orientation="horizontal">
                <ListView
                    android:id="@+id/recording_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    android:dividerHeight="10sp"
                    android:scrollbars="none"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>