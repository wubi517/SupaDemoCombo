<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="800dp"
    android:layout_height="450dp">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/search_dlg_top_lay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/setting_header">
        <TextView
            android:id="@+id/search_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Recording"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/search_dlg_top_lay"
        android:layout_marginTop="3sp"
        android:background="@drawable/setting_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:background="@drawable/parent_edit_bg">

                    <EditText
                        android:id="@+id/txt_old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:paddingLeft="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:background="@drawable/parent_edit_bg">
                    <EditText
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txt_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:hint="Duration(in Minutes)"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"/>
                    <requestFocus />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:gravity="center_horizontal"
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/style_checkbox"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_start"
                android:visibility="gone"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/parent_edit_bg"
                android:layout_height="60sp">
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:paddingLeft="15sp"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:hint="Start Time"
                    android:textColor="@color/black"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="20sp"
                android:layout_toLeftOf="@+id/btn_cancel"
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="30dp"
                android:paddingRight="10sp"
                android:paddingLeft="10sp"
                android:textColor="@color/white"
                android:text="Start Recording"
                android:textAllCaps="false"
                android:background="@drawable/btn_ok"
                >
            </Button>
            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/btn_cancel"
                android:layout_width="130sp"
                android:layout_height="50dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:text="Cancel"
                android:textAllCaps="false"
                android:background="@drawable/btn_ok" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>